<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RealtimeChatApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme. -->
         <item name="colorPrimary">@color/primary</item>
         <item name="android:statusBarColor">@color/black</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- Custom Floating Action Button -->
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle1</item>
    </style>

    <style name="FabShapeStyle1" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>
    <!-- Custom Floating Action Button -->

    <style name="Theme.RealtimeChatApp" parent="Base.Theme.RealtimeChatApp" />
</resources>